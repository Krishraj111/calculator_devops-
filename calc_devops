#!/bin/bash
echo "Enter first number:"
read a
echo "Enter second number:"
read b

echo "Choose operation: + or -"
read op

if [ "$op" == "+" ]; then
    echo "Result: $(($a + $b))"
elif [ "$op" == "-" ]; then
    echo "Result: $(($a - $b))"
else
    echo "Invalid operation"
fi






